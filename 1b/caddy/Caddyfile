{
    auto_https off
}

(cors) {
    @cors_preflight* method OPTIONS
    @cors* header Origin *

    handle @cors_preflight* {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
            Access-Control-Allow-Headers *
            Access-Control-Max-Age "3600"
            defer # turn on defer on your header directive to make sure the new header values are set after proxying
        }
        respond "" 204
    }

    handle @cors* {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Expose-Headers *
            defer
        }
    }
}

:80 {
    import cors
    
    # 배포 정보 (우리가 만든 JSON 직접 서빙)
    handle /deployment {
        header Content-Type "application/json"
        respond `{
    "network": {
        "chainId": 1337,
        "name": "Local Development",
        "rpcUrl": "https://smatteringly-leptorrhine-karen.ngrok-free.app"
    },
    "contracts": {
        "mock_erc_0": "0xCbEEd39De1b29ff3b380Af15A0Ea85B478C73F99",
        "mock_erc_1": "0x578C01f2C34307EFE0EB354721213FC069b9d069",
        "mini_amm": "0x85ae21072bbE3eBBe0DECFa60d0191Ef7bE03a4E"
    },
    "deployment": {
        "timestamp": "2024-01-08T00:40:00Z",
        "blockNumber": 15,
        "gasUsed": "4329301",
        "deployer": "0x404fa3f0Acf620e3d2A3c6aa80E27b07C830EB5a"
    },
    "endpoints": {
        "rpc": "https://smatteringly-leptorrhine-karen.ngrok-free.app",
        "explorer": "https://smatteringly-leptorrhine-karen.ngrok-free.app/explorer",
        "deployment": "https://smatteringly-leptorrhine-karen.ngrok-free.app/deployment",
        "graphPlayground": "https://smatteringly-leptorrhine-karen.ngrok-free.app/graph-playground"
    }
}` 200
    }
    
    handle /deployment.json {
        reverse_proxy sc-deployment-server:80
    }
    
    # Explorer (Blockscout) under /explorer path
    handle /explorer* {
        uri strip_prefix /explorer
        reverse_proxy frontend:3000
    }
    
    # Blockscout static resources (needed for subpath routing)
    handle /assets/* {
        reverse_proxy frontend:3000
    }
    
    handle /_next/* {
        reverse_proxy frontend:3000
    }
    
    handle /icons/* {
        reverse_proxy frontend:3000
    }
    
    handle /static/* {
        reverse_proxy frontend:3000
    }
    
    # Blockscout API routes - direct to backend
    handle /api/* {
        reverse_proxy backend:4000
    }
    
    # Blockscout WebSocket routes - direct to backend
    handle /socket/* {
        reverse_proxy backend:4000
    }
    
    handle /rpc* {
        uri strip_prefix /rpc
        reverse_proxy geth:8545
    }

    # Graph node GraphQL playground
    handle /graph-playground* {
        uri strip_prefix /graph-playground
        reverse_proxy graph-node:8000
    }
    
    handle {
        reverse_proxy geth:8545
    }
}
